<dec f='llvm/llvm/include/llvm/IR/LLVMContext.h' l='234' type='uint64_t llvm::LLVMContext::getDiagnosticsHotnessThreshold() const'/>
<doc f='llvm/llvm/include/llvm/IR/LLVMContext.h' l='224'>/// Return the minimum hotness value a diagnostic would need in order
  /// to be included in optimization diagnostics.
  ///
  /// Three possible return values:
  /// 0            - threshold is disabled. Everything will be printed out.
  /// positive int - threshold is set.
  /// UINT64_MAX   - threshold is not yet set, and needs to be synced from
  ///                profile summary. Note that in case of missing profile
  ///                summary, threshold will be kept at &quot;MAX&quot;, effectively
  ///                suppresses all remarks output.</doc>
<use f='llvm/llvm/lib/Analysis/OptimizationRemarkEmitter.cpp' l='84' u='c' c='_ZN4llvm25OptimizationRemarkEmitter4emitERNS_30DiagnosticInfoOptimizationBaseE'/>
<use f='llvm/llvm/lib/CodeGen/MachineOptimizationRemarkEmitter.cpp' l='58' u='c' c='_ZN4llvm32MachineOptimizationRemarkEmitter4emitERNS_30DiagnosticInfoOptimizationBaseE'/>
<def f='llvm/llvm/lib/IR/LLVMContext.cpp' l='153' ll='155' type='uint64_t llvm::LLVMContext::getDiagnosticsHotnessThreshold() const'/>
